<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.main{width: 100%; padding: 0 12px 0 12px;}
		.main .col{margin: 0 auto;}
		.main .col .icon{width: 33%; padding: 0 12px;}
		.main .col .icon:hover{cursor: pointer;}
	</ui:style>
	<g:HTMLPanel styleName="{style.main}">
	    <div class="{style.col}">
	        <g:Image styleName="{style.icon}" ui:field="barIcon"/>
	        <g:Image styleName="{style.icon}" ui:field="pieIcon"/>
	        <g:Image styleName="{style.icon}" ui:field="lineIcon"/>
	    </div>
	</g:HTMLPanel>
</ui:UiBinder> 