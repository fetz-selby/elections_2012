<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.main{
			float: left;
			width: 55px;
			background-color:transparent;
		}
		
		.main .sign-color{
			float: left;
			width: 15px;
			height: 15px;
			margin-right: 9px;
			margin-top: 9px;
		}
		
		.main .label{
			float: left;
			color: white;
			font-size: 19px;
		}
	</ui:style>
	<g:HTMLPanel styleName="{style.main}">
			<div class="{style.sign-color}" ui:field="color"></div>
			<div class="{style.label}" ui:field="label"></div>
	</g:HTMLPanel>
</ui:UiBinder> 