<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.main{width: 100%; padding: 0; margin: 0;}
		.main .back{float: left; width: 20%;}
		.main .back:hover{cursor: pointer;}
		.main .forward{float: left; width: 20%;}
		.main .forward:hover{cursor: pointer;}
		.main .display{float: left; width: 60%; text-align: center; line-height: 3.0; font-size: 1.25em; font-weight: bold; color: #FFF; user-select: none; text-decoration: none;}
	</ui:style>
	<g:HTMLPanel styleName="{style.main}">
		<g:Image styleName="{style.back}" ui:field="backIcon"/>
		<label class="{style.display}" ui:field="display"></label>
		<g:Image styleName="{style.forward}" ui:field="forwardIcon"/>
	</g:HTMLPanel>
</ui:UiBinder> 