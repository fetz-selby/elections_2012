<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.main{
			width: inherit;
			height: 44px;
		}
		.main .avatarPanel{
			width: 49px;
			height: 49px;
			float: left;
			margin-right: 3px;
		}
		.main .alias{
			width: 120px;
			height: inherit;
			float: left;
			text-align: center;
			padding-top: 13px;
			font-size: 16px;
		}
		.main .option{
			width: 30px;
			height: 36px;
			padding-top: 14px;
			float: right;
		}
	</ui:style>
	<g:HTMLPanel>
		<div class="{style.main}">
			<g:SimplePanel addStyleNames="{style.avatarPanel}" ui:field="imgBox"/>
			<div class="{style.alias}" ui:field="profileName">Daniel Craig</div>
			<g:SimplePanel addStyleNames="{style.option}" ui:field="popupBox" />
		</div>
	
	</g:HTMLPanel>
</ui:UiBinder> 