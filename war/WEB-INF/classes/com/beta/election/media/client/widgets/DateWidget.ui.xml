<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.main{
			width: 300px;
			height: 44px;
		}
		.main .arrow_fw{
			width: 41px;
			height: 42px;
			margin-left: 2px;
			margin-right: 2px;
			float: left;
			background-image: url("images/br_next.png");
		}
		
		.main .arrow_fw:hover{
			cursor: pointer;
		}
		
		.main .arrow_bk{
			width: 41px;
			height: 42px;
			margin-left: 2px;
			margin-right: 2px;
			float: left;
			background-image: url("images/br_prev.png");
		}
		
		.main .arrow_bk:hover{
			cursor: pointer;
		}
		
		.main .display{
			width: auto;
			min-width: 83px;
			height: auto;
			color: white;
			text-align: center;
			float: left;
			font-size: 39px;
		}
	</ui:style>
	<g:HTMLPanel>
	<div class="{style.main}">
		<div class="{style.arrow_bk}" ui:field="backArrow"></div>
		<div class="{style.display}" ui:field="dateText"></div>
		<div class="{style.arrow_fw}" ui:field="frontArrow"></div>
	</div>
	</g:HTMLPanel>
</ui:UiBinder> 